<p id="notice"><%= notice %></p>

<h1 class="flat">Flats</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
    <tr>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3" >
          <div class="card">
            <img class="pic" src="https://odis.homeaway.com/odis/listing/9a514373-3aed-468c-95cc-74c122fff1cf.c10.jpg" alt="cabin">
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= flat.description %></p>
              <a href="#" class="btn btn-primary">View this destination</a>
            </div>
            </div>
          </div>
        </div>
      </div>
      <td><%= link_to 'Show', flat %></td>
      <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
      <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

